<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.virginia.cs.edu.politoed" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.virginia.cs.edu.politoed.ViewAlarms"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
        <activity
            android:name="com.example.virginia.cs.edu.politoed.LightUpRPi"
            android:label="@string/title_activity_set_tasks_and_alarms" >
        </activity>
        -->
        <activity
            android:name="com.example.virginia.cs.edu.politoed.SetAlarm"
            android:label="@string/title_activity_set_alarm" >
        </activity>
        <activity
            android:name="com.example.virginia.cs.edu.politoed.OneAlarm"
            android:label="@string/title_activity_one_alarm" >
        </activity>

        <!-- Register the Alarm Receiver -->
        <receiver android:name="com.example.virginia.cs.edu.politoed.AlarmReceiver" />

        <activity
            android:name="com.example.virginia.cs.edu.politoed.AlarmLockScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_alarm_lock_screen"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>

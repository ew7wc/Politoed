<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <TextView
        android:id="@+id/alarmItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:text="placeholder"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmSwitch"
        android:layout_gravity="right"
        android:focusable="false"
        android:layout_alignTop="@+id/alarmItem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
        <!--android:layout_alignBottom="@+id/editAlarmBtn"-->
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editAlarmBtn"
        android:layout_gravity="right"
        android:background="@drawable/ic_action_edit"
        android:focusable="false"
        android:layout_alignTop="@+id/alarmItem"
        android:layout_toLeftOf="@+id/alarmSwitch"
        android:layout_toStartOf="@+id/alarmSwitch"
        android:layout_marginRight="45dp"
        android:clickable="true" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.virginia.cs.edu.politoed.ViewAlarms">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitAlarmBtn"
        android:layout_alignBottom="@+id/alarmTime"
        android:layout_toRightOf="@+id/alarmTime"
        android:layout_toEndOf="@+id/alarmTime"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="42dp"
        android:clickable="true"
        android:enabled="true"
        android:onClick="submitAlarm" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/android:list"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/alarmTime"
        android:layout_centerHorizontal="true" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmTime"
        android:layout_alignTop="@+id/alarmTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:id="@+id/submitDate"
        android:layout_alignBottom="@+id/submitAlarmBtn"
        android:layout_alignRight="@+id/android:list"
        android:layout_alignEnd="@+id/android:list"
        android:onClick="submitDate" />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/appbackground"
    tools:context="com.example.virginia.cs.edu.politoed.SetAlarm">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:id="@+id/timeLabel"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_alignTop="@+id/timePicker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmDate"
        android:hint="Click to set date"
        android:textStyle="bold"
        style="@android:style/Widget.Holo.Spinner"
        android:clickable="true"
        android:onClick="onClickSetDate"
        android:layout_marginRight="47dp"
        android:layout_alignBaseline="@+id/timeLabel"
        android:layout_alignBottom="@+id/timeLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColorHint="#FFFFFF"/>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_toEndOf="@+id/timeLabel"
        android:layout_marginLeft="26dp"
        android:layout_alignTop="@+id/timePicker"
        android:layout_toRightOf="@+id/timeLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTaskName"
        android:hint="Enter Your Task Name"
        android:textStyle="bold"
        android:layout_below="@+id/timePicker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp"
        android:autoText="false"
        android:textColorHint="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category:"
        android:id="@+id/Category"
        android:textSize="24sp"
        android:layout_marginTop="39dp"
        android:textStyle="bold"
        android:layout_below="@+id/editTaskName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categoryList"
        android:labelFor="@id/Category"
        android:spinnerMode="dropdown"
        android:clickable="true"
        android:layout_toEndOf="@+id/Category"
        android:layout_alignTop="@+id/Category"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priority:"
        android:id="@+id/Priority"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/categoryList"
        android:layout_alignRight="@+id/Category"
        android:layout_alignEnd="@+id/Category" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/priorityPicker"
        android:clickable="true"
        android:labelFor="@id/Priority"
        android:layout_alignTop="@+id/Priority"
        android:layout_toRightOf="@+id/Category"
        android:layout_toEndOf="@+id/Category" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textCapSentences"
        android:ems="10"
        android:id="@+id/editNotes"
        android:editable="true"
        android:hint="Enter Notes About Your Task Here"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:longClickable="false"
        android:layout_below="@+id/twitterToggle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/priorityPicker"
        android:layout_alignEnd="@+id/priorityPicker"
        android:scrollbars = "vertical"
        android:lines="2"
        android:textColorHint="#FFFFFF"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twitterToggle"
        android:layout_toEndOf="@+id/editTaskName"
        android:layout_toStartOf="@+id/alarmDate"
        android:textOn="Send to Twitter!"
        android:textOff="Do not send to Twitter"
        android:layout_marginTop="54dp"
        android:textStyle="bold"
        android:layout_below="@+id/priorityPicker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitAlarmBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:onClick="onClickSubmit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>

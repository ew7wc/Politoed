<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.virginia.cs.edu.politoed.OneAlarm">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wake Up"
        android:id="@+id/taskName"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/dateHeader"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday, Nov 10, 2014"
        android:id="@+id/dateHeader"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="40sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Task"
        android:id="@+id/editTaskBtn"
        android:clickable="true"
        android:enabled="true"
        android:layout_toEndOf="@+id/taskName"
        android:layout_marginLeft="45dp"
        android:layout_alignTop="@+id/deleteTaskBtn"
        android:layout_toRightOf="@+id/taskName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8:30 AM"
        android:id="@+id/textView2"
        android:textSize="35sp"
        android:layout_alignBottom="@+id/taskName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/deleteTaskBtn"
        android:layout_toEndOf="@+id/editTaskBtn"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/editTaskBtn"
        android:enabled="false" />
</RelativeLayout>
